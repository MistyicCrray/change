<view class="content"><view class="row b-b"><text class="tit">名称</text><input class="input" type="text" placeholder="名称" placeholder-class="placeholder" data-event-opts="{{[['input',[['__set_model',['$0','name','$event',[]],['productData']]]]]}}" value="{{productData.name}}" bindinput="__e"/></view><view class="row b-b"><text class="tit">类别</text><view class="uni-list-cell"><view class="uni-list-cell-db"><picker value="{{index}}" range="{{array}}" range-key="name" data-event-opts="{{[['change',[['bindPickerChange',['$event']]]]]}}" bindchange="__e"><view class="uni-input" value="{{array[index].id}}">{{array[index].name}}</view></picker></view></view></view><view class="row b-b"><text class="tit">现价</text><input class="input" type="number" placeholder="现在的价格" placeholder-class="placeholder" data-event-opts="{{[['input',[['__set_model',['$0','price','$event',[]],['productData']]]]]}}" value="{{productData.price}}" bindinput="__e"/></view><view class="row b-b"><text class="tit">原价</text><input class="input" type="number" placeholder="原价" placeholder-class="placeholder" data-event-opts="{{[['input',[['__set_model',['$0','oldPrice','$event',[]],['productData']]]]]}}" value="{{productData.oldPrice}}" bindinput="__e"/></view><view class="row b-b"><text class="tit">交换物品</text><input class="input" type="text" placeholder="需要交换的物品" placeholder-class="placeholder" data-event-opts="{{[['input',[['__set_model',['$0','changeWhat','$event',[]],['productData']]]]]}}" value="{{productData.changeWhat}}" bindinput="__e"/></view><view class="row b-b"><text class="tit">数量</text><input class="input" type="text" placeholder="数量" placeholder-class="placeholder" data-event-opts="{{[['input',[['__set_model',['$0','quantity','$event',[]],['productData']]]]]}}" value="{{productData.quantity}}" bindinput="__e"/></view><view class="row b-b" style="height:300rpx;"><image style="display:block;width:210rpx;height:210rpx;" src="{{productData.file}}"></image><button type="primary" loading="{{loading}}" disabled="{{disabled}}" data-event-opts="{{[['tap',[['upload',['$event']]]]]}}" bindtap="__e">选择照片</button></view><button data-event-opts="{{[['tap',[['confirm',['$event']]]]]}}" class="add-btn" bindtap="__e">提交</button></view>